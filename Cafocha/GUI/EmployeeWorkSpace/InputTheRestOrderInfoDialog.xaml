<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:support="clr-namespace:Cafocha.GUI.Support"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        x:Class="Cafocha.GUI.EmployeeWorkSpace.InputTheRestOrderInfoDialog"
        mc:Ignorable="d"
        Height="427.666"
        Width="352"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <materialDesign:ColorZone Mode="PrimaryDark"
                                  Height="31"
                                  Width="344"
                                  HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal"
                        Margin="10,0,0,0">
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           Margin="0,0,100,0"
                           FontSize="18">
                    Payment Form
                </TextBlock>
                <ComboBox x:Name="CboPaymentMethod"
                          Width="100"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center"
                          SelectionChanged="Selector_OnSelectionChanged" />
            </StackPanel>
        </materialDesign:ColorZone>

        <TextBlock x:Name="TbTotalPrice"
                   Text="Current Amount: "
                   Margin="10,10,0,5"
                   FontWeight="Bold"
                   FontSize="18"
                   Foreground="{DynamicResource MaterialDesignDarkForeground}"
                   Height="25" />

        <support:KeyboardControl x:Name="KbInput"
                                 Height="300"
                                 VerticalAlignment="Top"
                                 Width="Auto"
                                 GoClick="DoPayment_Click" />
        <Button x:Name="BtnCancel"
                Width="85"
                Margin="0,10,10,0"
                Content="Cancel"
                HorizontalAlignment="Right"
                Click="BtnCancel_OnClick" />
    </StackPanel>
</Window>