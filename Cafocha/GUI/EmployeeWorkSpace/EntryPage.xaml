<Page x:Class="Cafocha.GUI.EmployeeWorkSpace.Entry"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:Uc="clr-namespace:POS"
      xmlns:employeeWorkSpace="clr-namespace:Cafocha.GUI.EmployeeWorkSpace"
      mc:Ignorable="d"
      Background="{DynamicResource MaterialDesignPaper}"
      Height="610"
      Width="1200"
      Title="Entry">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <employeeWorkSpace:UcMenu x:Name="ucMenu" HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Width="700"
                                      Height="600"
                                      Margin="0,0,10,0" />
        </Grid>
        <Grid Grid.Column="1">
            <employeeWorkSpace:UcOrder x:Name="ucOrder"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Width="500"
                                      Height="600" />
        </Grid>
    </Grid>
</Page>