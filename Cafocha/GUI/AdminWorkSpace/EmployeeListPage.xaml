<Page x:Class="Cafocha.GUI.AdminWorkSpace.EmployeeListPage"
      Background="{DynamicResource MaterialDesignPaper}"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="300"
      d:DesignWidth="300"
      Title="EmployeeListPage"
      Height="630"
      Width="1366">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="557*" />
            <ColumnDefinition Width="810*" />
        </Grid.ColumnDefinitions>
        <materialDesign:ColorZone Margin="2,2,10,0"
                                  materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                  CornerRadius="3"
                                  Mode="PrimaryDark"
                                  Height="44">
            <StackPanel Orientation="Horizontal"
                        Margin="20,0,0,0">
                <TextBlock VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="18">
                    Danh sách nhân viên
                </TextBlock>
            </StackPanel>
        </materialDesign:ColorZone>
        <ListView Name="lvDataEmployee"
                  Width="541"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Background="#FFED5C5C"
                  Foreground="White"
                  FontWeight="Bold"
                  Margin="0,51,0,0"
                  SelectionChanged="lvData_SelectionChanged"
                  Height="579">
            <ListView.View>
                <GridView x:Name="gvShowDetails">
                    <GridViewColumn Header="ID"
                                    Width="100"
                                    DisplayMemberBinding="{Binding EmpId}" />
                    <GridViewColumn Header="Tên"
                                    Width="150"
                                    DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Ngày sinh"
                                    Width="150"
                                    DisplayMemberBinding="{Binding Birth,StringFormat=dd/MM/yyyy}" />
                    <GridViewColumn Header="Tên đăng nhập"
                                    Width="150"
                                    DisplayMemberBinding="{Binding Username}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Grid x:Name="EmployeeInfo"
              Grid.Column="1">

            <materialDesign:ColorZone Height="44"
                                      materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                      CornerRadius="3"
                                      Margin="0,2,0,0"
                                      Mode="PrimaryDark">
                <StackPanel Orientation="Horizontal"
                            Margin="20,0,0,0">
                    <TextBlock VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="18">
                        Thông tin nhân viên
                    </TextBlock>
                </StackPanel>
            </materialDesign:ColorZone>
            <StackPanel Orientation="Vertical"
                        Margin="0,49,0,0">
                <StackPanel.Resources>
                    <Style TargetType="TextBlock"
                           x:Key="TextBlockLabel">
                        <Setter Property="FontSize"
                                Value="18" />
                        <Setter Property="Foreground"
                                Value="#FFFFEDBC" />
                        <Setter Property="FontWeight"
                                Value="Bold" />
                        <Setter Property="Width"
                                Value="120" />
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Horizontal"
                            Margin="15,20,0,0">
                    <TextBlock Text="ID:"
                               Style="{StaticResource ResourceKey=TextBlockLabel}" />
                    <TextBlock x:Name="txtID"
                               FontSize="18"
                               Foreground="White"
                               Width="215" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="15,20,0,0">
                    <TextBlock Text="Tên: "
                               Style="{StaticResource ResourceKey=TextBlockLabel}" />
                    <TextBox x:Name="txtName"
                             FontSize="18"
                             Foreground="White"
                             Width="215"
                             IsReadOnly="True"
                             Margin="0,0,100,0" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Ngày sinh: "
                                   Style="{StaticResource ResourceKey=TextBlockLabel}" />
                        <TextBox x:Name="txtBirth"
                             Width="214"
                             FontSize="18"
                             Foreground="White"
                             Margin="0,0,100,0"
                             VerticalAlignment="Center"
                             IsReadOnly="True"
                             HorizontalAlignment="Center" />
                        </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="15,20,0,0">
                    <TextBlock Text="Địa chỉ: "
                               Style="{StaticResource ResourceKey=TextBlockLabel}" Width="125" />
                    <TextBox MaxWidth="300"
                             Foreground="White"
                             x:Name="txtAddress"
                             Height="70"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             materialDesign:HintAssist.Hint=""
                             AcceptsReturn="True"
                             FontSize="18"
                             SpellCheck.IsEnabled="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             Width="215"
                             Margin="0,0,100,0" IsReadOnly="True" />
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Foreground="{Binding ElementName=PhoneTextBox, Path=BorderBrush}"
                                                     Kind="Phone"
                                                     Width="30"
                                                     Height="30" />
                            <TextBox x:Name="txtPhone"
                                     Text="{Binding Phone}"
                                     Width="215"
                                     Foreground="White"
                                     FontSize="18"
                                     Margin="90,0,0,0"
                                     IsReadOnly="True"
                                     materialDesign:TransitionAssist.DisableTransitions="True" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Foreground="{Binding BorderBrush, ElementName=PhoneTextBox}"
                                                     Kind="MailRu"
                                                     Width="30"
                                                     Height="30" />
                            <TextBox x:Name="txtMail"
                                     Text="{Binding Email}"
                                     Width="215"
                                     FontSize="18"
                                     Margin="90,0,0,0"
                                     IsReadOnly="True"
                                     Foreground="White" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            Margin="15,20,0,0">
                    <TextBlock Text="Ngày làm việc: "
                               Style="{StaticResource ResourceKey=TextBlockLabel}" Width="128" />
                    <TextBox x:Name="txtStart"
                             Width="214"
                             FontSize="18"
                             Foreground="White"
                             Margin="0,0,100,0"
                             VerticalAlignment="Center"
                             IsReadOnly="True"
                             HorizontalAlignment="Center" />
                    <TextBlock Text="Lương theo giờ: "
                               Style="{StaticResource ResourceKey=TextBlockLabel}" Width="146" />
                   
                    <TextBox x:Name="txtHour_wage"
                             Width="214"
                             FontSize="18"
                             Foreground="White"
                             Margin="0,0,100,0"
                             VerticalAlignment="Center"
                             IsReadOnly="True"
                             HorizontalAlignment="Center" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="15,20,0,0">
                    <TextBlock Text="Loại: "
                               Style="{StaticResource ResourceKey=TextBlockLabel}" />
                    <TextBox x:Name="txtRole"
                             Width="214"
                             FontSize="18"
                             Foreground="White"
                             Margin="0,0,100,0"
                             VerticalAlignment="Center"
                             IsReadOnly="True"
                             HorizontalAlignment="Center" />
                </StackPanel>

            </StackPanel>
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="TextBlock"
                           x:Key="TextBlockLabel">
                        <Setter Property="FontSize"
                                Value="18" />
                        <Setter Property="Foreground"
                                Value="#FFFFEDBC" />
                        <Setter Property="FontWeight"
                                Value="Bold" />
                        <Setter Property="Width"
                                Value="120" />
                        <Setter Property="HorizontalAlignment"
                                Value="Center" />
                        <Setter Property="VerticalAlignment"
                                Value="Center" />
                    </Style>
                </StackPanel.Resources>
                <StackPanel Orientation="Horizontal"
                            Margin="15,360,-0.4,203">
                    <TextBlock Text="Tên đăng nhập"
                               Style="{StaticResource ResourceKey=TextBlockLabel}" />
                    <TextBox x:Name="txtAcount"
                             Width="214"
                             FontSize="18"
                             Foreground="White"
                             Margin="0,0,100,0"
                             VerticalAlignment="Center"
                             IsReadOnly="True"
                             HorizontalAlignment="Center" />
                </StackPanel>

            </StackPanel>
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Height="50"
                        VerticalAlignment="Bottom"
                        Margin="118,0,127,38">
                <Button x:Name="bntAddnew"
                        Content="Thêm"
                        Width="121"
                        Height="Auto"
                        FontSize="18"
                        FontWeight="Bold"
                        Margin="0,0,0,0"
                        Click="bntAddnew_Click" />
                <Button x:Name="bntUpdate"
                        Content="Cập nhật"
                        Height="Auto"
                        Margin="100,0,0,0"
                        Width="121"
                        FontSize="18"
                        FontWeight="Bold"
                        Click="bntUpdate_Click" />
                <Button x:Name="bntDel"
                        Content="Xóa"
                        Height="Auto"
                        Margin="100,0,0,0"
                        Width="121"
                        FontSize="18"
                        FontWeight="Bold"
                        Click="bntDel_Click" />
            </StackPanel>
        </Grid>
    </Grid>

</Page>