                            x:Name="BtnDeleteInput"
                            Width="40"
                            Click="BtnDeleteInput_Click">
                        <materialDesign:PackIcon Kind="Close"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center" />
                    </Button>
                </StackPanel>

                <StackPanel x:Name="StkBoard"
                            Orientation="Horizontal"
                            Height="191">

