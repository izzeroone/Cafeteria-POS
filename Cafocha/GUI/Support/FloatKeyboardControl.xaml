                             Width="401"
                             Foreground="Coral"
                             FontSize="14"
                             FontWeight="Bold"
                             x:Name="TxtInputValue"
                             Margin="5,0,0,2" 
                             TextChanged="TxtInputValue_OnTextChanged"/>
